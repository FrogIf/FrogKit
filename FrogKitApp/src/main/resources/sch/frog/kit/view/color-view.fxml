<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.VBox?>
<?import sch.frog.kit.view.ColorView?>
<fx:root type="sch.frog.kit.view.ColorView" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <ToolBar>
        <Button text="+" onAction="#appendColorRow" />
        <Button text="clear" onAction="#removeAllRows" />
    </ToolBar>
    <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true">
        <VBox fx:id="colorTable"></VBox>
    </ScrollPane>
</fx:root>
